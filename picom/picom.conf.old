# Blur & opacity
#blur-background = true;
#inactive-opacity = 1;
#active-opacity = 1;
#frame-opacity = 1;
#inactive-opacity-override = false;
opacity-rule = [
];

# Fading
fading = true;
fade-delta = 3;

# Screen tear fix
backend = "glx";
vsync = true;

# Shadow
shadow = true;
shadow-radius = 15;
shadow-opacity = 0.7;
#shadow-red = 0.0;
#shadow-green = 0.15;
#shadow-blue = 0.2;
shadow-exclude = [
  "! name~=''",
  "name = 'Notification'",
  "name = 'Plank'",
  "name = 'Docky'",
  "name = 'Kupfer'",
  "name = 'xfce4-notifyd'",
  "name *= 'VLC'",
  "name *= 'compton'",
  "name *= 'picom'",
  "name *= 'Chromium'",
  "name *= 'Zoom'",
  "name *= 'zoom'",
  "name = 'cpt_frame_window'",
  "name = 'zoom_linux_float_video_window'",
  "name = 'as_toolbar'",
  "name *= 'Chrome'",
  "class_g = 'Polybar'",
  "class_g = 'Firefox' && argb",
  "class_g = 'Conky'",
  "class_g = 'Kupfer'",
  "class_g = 'Synapse'",
  "class_g ?= 'Notify-osd'",
  "class_g ?= 'Cairo-dock'",
  "class_g ?= 'Xfce4-notifyd'",
  "class_g ?= 'Xfce4-power-manager'",
  "_GTK_FRAME_EXTENTS@:c",
  "_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'"
];
